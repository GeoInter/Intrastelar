<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="memory-vbox" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="thb.fbi.leguan.controller.MemoryController">
   <children>
      <HBox alignment="CENTER" spacing="100.0">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label text="%memory.Label.Address">
                     <VBox.margin>
                        <Insets bottom="4.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER">
                     <children>
                        <Button fx:id="DecAddressButton" disable="true" mnemonicParsing="false" onAction="#switchAddressToDec" styleClass="memory-button" text="Dec">
                           <HBox.margin>
                              <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="HexAddressButton" mnemonicParsing="false" onAction="#switchAddressToHex" styleClass="memory-button" text="Hex">
                           <HBox.margin>
                              <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label text="%memory.Label.Value">
                     <VBox.margin>
                        <Insets bottom="4.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER">
                     <children>
                        <Button fx:id="DecValueButton" disable="true" mnemonicParsing="false" onAction="#switchValueToDec" styleClass="memory-button" text="Dec">
                           <HBox.margin>
                              <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="ASCIIValueButton" mnemonicParsing="false" onAction="#switchValueToASCII" styleClass="memory-button" text="ASCII">
                           <HBox.margin>
                              <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="2.0" right="2.0" top="18.0" />
         </VBox.margin>
      </HBox>
      <Separator prefWidth="200.0">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Separator>
      <HBox alignment="CENTER">
         <children>
            <TextField fx:id="startAddressTextField" promptText="%memory.Textbox.start">
               <HBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="endAddressTextField" promptText="%memory.Textbox.end">
               <HBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </HBox.margin>
            </TextField>
            <Button id="filter-button" fx:id="filterButton" mnemonicParsing="false" onAction="#filterButtonFired" text="%memory.Button.Filter">
               <HBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="3.0" right="3.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <TableView fx:id="memoryTable" fixedCellSize="30.0">
        <columns>
          <TableColumn fx:id="addressColumn" editable="false" prefWidth="75.0" text="%memory.Column.Address" />
          <TableColumn fx:id="contentColumn" editable="false" prefWidth="75.0" sortable="false" text="%memory.Column.Content" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER">
         <children>
            <Label text="%memory.Label.Display">
               <HBox.margin>
                  <Insets right="8.0" />
               </HBox.margin>
            </Label>
            <Button fx:id="memoryByteButton" disable="true" mnemonicParsing="false" onAction="#switchMemoryToByte" styleClass="memory-button" text="Byte">
               <HBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="memoryDWordButton" mnemonicParsing="false" onAction="#DWordButtonFired" styleClass="memory-button" text="DWord">
               <HBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="2.0" right="2.0" top="18.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
