<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.fxmisc.richtext.CodeArea?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="thb.fbi.controller.SimulatorController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="New" />
                  <MenuItem mnemonicParsing="false" text="Save" />
                  <MenuItem mnemonicParsing="false" text="Save as" />
                  <MenuItem mnemonicParsing="false" text="Open" />
                  <MenuItem mnemonicParsing="false" text="Quit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="View">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Help">
              <items>
                  <MenuItem mnemonicParsing="false" text="Load example" />
                <MenuItem mnemonicParsing="false" text="About" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER" maxHeight="60.0">
               <children>
                  <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                     <children>
                        <ButtonBar maxWidth="1.7976931348623157E308">
                          <buttons>
                              <Button mnemonicParsing="false" onAction="#runCode" text="Run" />
                              <Button mnemonicParsing="false" onAction="#reset" text="Reset" />
                              <Button mnemonicParsing="false" onAction="#stepForward" text="Forward" />
                              <Button mnemonicParsing="false" onAction="#stepBackward" text="Backward" />
                          </buttons>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </ButtonBar>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" prefWidth="250.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label prefHeight="17.0" prefWidth="62.0" text="Simulator" />
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Label text="Line" />
                              <Label text="--" />
                           </children>
                           <HBox.margin>
                              <Insets left="2.0" right="4.0" />
                           </HBox.margin>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Label text="Issues" />
                              <Label text="0" />
                           </children>
                           <HBox.margin>
                              <Insets left="2.0" right="4.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                     <children>
                        <CheckBox fx:id="showUnusedRegisterButton" mnemonicParsing="false" selected="true" text="show unused registers" HBox.hgrow="NEVER" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding></HBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <SplitPane dividerPositions="0.62" prefWidth="1920.0" VBox.vgrow="ALWAYS">
        <items>
          <AnchorPane>
               <children>
                  <VBox>
                     <children>
                        <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
                           <children>
                              <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Reset to continue editing code" HBox.hgrow="ALWAYS">
                                 <padding>
                                    <Insets bottom="4.0" left="8.0" right="8.0" top="4.0" />
                                 </padding>
                              </Label>
                           </children>
                           <padding>
                              <Insets bottom="2.0" left="6.0" right="6.0" top="2.0" />
                           </padding>
                        </HBox>
                        <StackPane fx:id="codeStackPane" layoutX="14.0" layoutY="14.0" VBox.vgrow="ALWAYS">
                           <children>
                              <ScrollPane prefHeight="400.0" prefWidth="618.0" vbarPolicy="ALWAYS" StackPane.alignment="CENTER">
                                 <content>
                                    <CodeArea autoHeight="true" lineHighlighterOn="true" prefHeight="397.0" prefWidth="601.0" />
                                 </content>
                              </ScrollPane>
                           </children></StackPane>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
          <AnchorPane>
               <children>
                   <!-- content from RegisterPane.fxml included here -->
                  <fx:include fx:id="registerPane" source="RegisterPane.fxml" />              
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>
</VBox>
